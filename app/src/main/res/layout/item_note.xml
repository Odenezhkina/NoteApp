<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/rv_item_padding">

        <TextView
            android:id="@+id/tv_title"
            style="@style/ContentTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flow_categories"
            tools:text="Title Note" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/ContentText_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:text="Some very very long long text very very long long text very very long long textvery very long long text" />

        <com.google.android.material.chip.Chip
            android:id="@+id/category"
            style="@style/ChipCategoryStyle"
            android:text="Android"
            app:chipBackgroundColor="@color/category_red" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_categories"
            style="@style/CategoryFlow"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:constraint_referenced_ids="category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
