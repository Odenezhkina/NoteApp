<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.noteapp.ui.fragments.list.ListFragment"
        android:label="ListFragment"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_noteDetailFragment"
            app:destination="@id/noteDetailFragment">
            <argument
                android:name="noteId"
                app:argType="long"
                app:nullable="false" />
        </action>
        <action
            android:id="@+id/action_listFragment_to_todoDetailFragment"
            app:destination="@id/todoDetailFragment">
            <argument
                android:name="todoId"
                app:argType="long"
                app:nullable="false" />
        </action>
        <action
            android:id="@+id/action_listFragment_to_addCategoryDialog"
            app:destination="@id/addCategoryDialog" />
    </fragment>
    <fragment
        android:id="@+id/noteDetailFragment"
        android:name="com.example.noteapp.ui.fragments.note.detailed.NoteDetailedFragment"
        android:label="NoteDetailFragment"
        tools:layout="@layout/fragment_detailed_note">
        <argument
            android:name="noteId"
            app:nullable="false"
            app:argType="long" />
        <action
            android:id="@+id/action_noteDetailFragment_to_chooseCategoryDialog"
            app:destination="@id/chooseCategoryDialog" />
    </fragment>
    <fragment
        android:id="@+id/todoDetailFragment"
        android:name="com.example.noteapp.ui.fragments.todo.detailed.TodoDetailedFragment"
        android:label="TodoDetailFragment"
        tools:layout="@layout/fragment_detailed_todo">
        <argument
            android:name="todoId"
            app:nullable="false"
            app:argType="long" />
        <action
            android:id="@+id/action_todoDetailFragment_to_chooseCategoryDialog"
            app:destination="@id/chooseCategoryDialog" />
    </fragment>
    <dialog
        android:id="@+id/chooseCategoryDialog"
        android:name="com.example.noteapp.ui.dialogs.category.choose.ChooseCategoryDialog"
        android:label="ChooseCategoryDialog"
        tools:layout="@layout/dialog_change_category">
        <argument
            android:name="type"
            app:argType="com.example.noteapp.ui.util.CategoryOwnerType"
            app:nullable="false"></argument>
        <argument
            android:name="noteId"
            android:defaultValue="-1L"
            app:argType="long"
            app:nullable="false"></argument>
        <argument
            android:name="todoId"
            android:defaultValue="-1L"
            app:argType="long"
            app:nullable="false"></argument>
    </dialog>
    <dialog
        android:id="@+id/addTodoBottomSheetDialog"
        android:name="com.example.noteapp.ui.dialogs.todo.AddTodoBottomSheetDialog"
        android:label="AddTodoBottomSheetDialog"
        tools:layout="@layout/bottom_sheet_add_todo" >
    </dialog>
    <fragment
        android:id="@+id/notesListFragment"
        tools:layout="@layout/fragment_notes_list"
        android:name="com.example.noteapp.ui.fragments.note.list.NotesListFragment"
        android:label="NotesListFragment">
        <action
            android:id="@+id/action_notesListFragment_to_noteDetailFragment"
            app:destination="@id/noteDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/todosListFragment"
        android:name="com.example.noteapp.ui.fragments.todo.list.TodosListFragment"
        android:label="TodosListFragment"
        tools:layout="@layout/fragment_todos_list">
        <action
            android:id="@+id/action_todosListFragment_to_addTodoBottomSheetDialog"
            app:destination="@id/addTodoBottomSheetDialog" />
        <action
            android:id="@+id/action_todosListFragment_to_todoDetailFragment"
            app:destination="@id/todoDetailFragment" />
    </fragment>
    <dialog
        android:id="@+id/addCategoryDialog"
        tools:layout="@layout/dialog_add_category"
        android:name="com.example.noteapp.ui.dialogs.category.add.AddCategoryDialog"
        android:label="AddCategoryDialog" />
</navigation>
