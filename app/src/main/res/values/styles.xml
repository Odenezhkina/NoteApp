<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Headline" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="Headline_small" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="ContentTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <!--    main list -->
    <style name="ContentText_small" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <!--    detailed fragment-->
    <style name="ContentText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="AdditionalText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/inter_light</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="ButtonClearAll" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_baseline_delete_24</item>
    </style>
<!--    todo button clear all ?? replace to just PrimaryImageButton-->

    <style name="PrimaryImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MaterialButtonWithIcon" parent="ThemeOverlay.Material3.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="iconSize">20dp</item>
        <item name="iconTint">@color/dark_grey</item>
        <item name="android:strokeColor">@color/dark_grey</item>
    </style>

    <style name="MaterialButtonWithIcon.Small">
        <item name="android:textSize">9sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:bottom">0dp</item>
    </style>

    <style name="ChipCategoryStyle" parent="ShapeAppearanceOverlay.Material3.Chip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/inter_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CategoryFlow" parent="">
        <item name="android:orientation">horizontal</item>
        <item name="flow_horizontalAlign">start</item>
        <item name="flow_horizontalBias">0</item>
        <item name="flow_wrapMode">chain</item> <!-- todo -->
        <item name="flow_horizontalGap">4dp</item>
        <item name="flow_horizontalStyle">packed</item>
    </style>

    <style name="PrimaryButton" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/black</item>
        <item name="iconGravity">end</item>
    </style>


    <style name="TodoCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/black</item>
        <item name="buttonTint">@color/black</item>
    </style>

</resources>
