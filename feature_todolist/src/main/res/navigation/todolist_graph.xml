<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/todolist_graph"
    app:startDestination="@id/todosListFragment">
    <fragment
        android:id="@+id/todosListFragment"
        android:name="com.noteapp.feature_todolist.list.TodosListFragment"
        android:label="TodosListFragment"
        tools:layout="@layout/fragment_todos_list">
        <action
            android:id="@+id/action_todosListFragment_to_addTodoBottomSheetDialog"
            app:destination="@id/addTodoBottomSheetDialog" />
        <action
            android:id="@+id/action_todosListFragment_to_todoDetailFragment"
            app:destination="@id/todoDetailedFragment">
            <argument
                android:name="todoId"
                app:argType="long"
                app:nullable="false" />
        </action>
    </fragment>

    <dialog
        android:id="@+id/addTodoBottomSheetDialog"
        android:name="com.noteapp.feature_todolist.dialog.add_task.AddTodoBottomSheetDialog"
        android:label="AddTodoBottomSheetDialog"
        tools:layout="@layout/bottom_sheet_add_todo" />
    <fragment
        android:id="@+id/todoDetailedFragment"
        android:name="com.noteapp.feature_detailedscreens.fragments.todo.detailed.TodoDetailedFragment"
        android:label="TodoDetailedFragment"
        tools:layout="@layout/fragment_detailed_todo" />
</navigation>
